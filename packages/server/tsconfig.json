{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "target": "ESNext",
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./tests",
    "./.coverage"
  ]
}
