{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src/",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true ,
    "declarationMap": true,
    "baseUrl": ".",
  },
  "include": [
    "./src/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./tests",
    "./.coverage"
  ]
}
